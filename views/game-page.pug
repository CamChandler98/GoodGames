extends layout.pug


block content
        h2= game.title
        p= game.description
        p= game.releaseDate
        h3 Reviews
            for review in game.Reviews
                h4 User: #{review.User.username}
                p= review.content
                p Rating:  #{review.rating}
        h3 Add a Review
        form(action=`/api/games/${game.id}/reviews`, method="post")
            label(for="content") Review
            textarea(name="content", id="content", cols="30", rows="10")
            label(for="rating") Rating
            select(name="rating", id="rating")
                option(value="1") 1
                option(value="2") 2
                option(value="3") 3
                option(value="4") 4
                option(value="5") 5
            button(type="submit") Submit
