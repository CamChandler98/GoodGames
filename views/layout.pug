doctype html
html
    head
        block head
            title="GoodGames"
            link(rel='stylesheet' href='/stylesheets/reset.css')
            link(rel='stylesheet' href='/stylesheets/default.css')
            link(rel='stylesheet' href='/stylesheets/navbar.css')
            script(src="/javascripts/navbar.js" type="module" defer)
            script(src="https://kit.fontawesome.com/e3693ba42e.js" crossorigin="anonymous")

            meta(name="description", content="GoodGames")
            meta(name="title", property="og:title", content="GoodGames")
            meta(property="og:type", content="Website")
            meta(name="image", property="og:image", content="https://live.staticflickr.com/65535/51604587774_e63b48c5d8_b.jpg")
            meta(property="og:image:secure_url", content="https://live.staticflickr.com/65535/51604587774_e63b48c5d8_b.jpg")
            meta(name="description", property="og:description", content="GoodGames is a web application that allows users to view a library of video games and organize a custom selection of games into shelves. Users will also be able to view reviews of each game as well as publish their own. This project is inspired by Goodreads, a website where individuals can search for books from an existing library, catalog books into custom shelves, and write & discuss reviews.")
            meta(name="author", content="GoodGames Team")
    body
        header
            div(id='navbar-container' class='navbar')
                <nav>
                    ul.logoList
                        .logo
                            a(href="/", method="post") Good Games
                    form.search_box(action='/search' method='post')
                        input#query.input_box(type='search' name='term' placeholder='Find Your Game!')
                        input.butt(type='submit' value='üîç')
                    if locals.authenticated
                        ul.navlist
                            li
                                a(href="/games") All Games
                            li
                                a(href="/reviews") My Reviews
                            li
                                a(href="/shelves") My Shelves
                            li
                                a(href="/logout" id="logout") Logout
                            li
                                a(href="/about") About
                        .small
                            img#menuimg(src='https://img.icons8.com/cotton/64/000000/menu.png')
                    else
                        ul.navlist
                            li
                                a(href="/games") All Games
                            li
                                a(href="/login") Login
                            li
                                a(href="/signup") Sign Up
                            li
                                a(href="/demo" id="demo") Demo
                            li
                                a(href="/about") About
                        .small
                            img#menuimg(src='https://img.icons8.com/cotton/64/000000/menu.png')
                </nav>
            script(src='/javascripts/slider.js' type="module" defer)
        block content
